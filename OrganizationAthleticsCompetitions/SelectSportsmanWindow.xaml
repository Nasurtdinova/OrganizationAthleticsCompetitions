<Page x:Class="OrganizationAthleticsCompetitions.SelectSportsmanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrganizationAthleticsCompetitions"
        mc:Ignorable="d"
        Title="SelectSportsmanWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Выберите спортсмена" Margin="20"></TextBlock>
            <ComboBox Name="comboSportsmans" Width="400" DisplayMemberPath="FullName"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <Button Name="btnSelect" Width="200" Content="Выбрать" Margin="20" Click="btnSelect_Click"></Button>
            <Button Name="btnCreate" Width="250" Content="Создать спортсмена" Click="btnCreate_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
